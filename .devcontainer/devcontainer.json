{
  "name": "Kaggle-SF-Crime",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12",
  "postStartCommand": "sed -i 's/\r$//' .devcontainer/post-create.sh && .devcontainer/post-create.sh",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/sf-crime,type=bind",
  "workspaceFolder": "/workspaces/sf-crime",
  "features": {
    "ghcr.io/devcontainers-contrib/features/hatch:2": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "[python]": {
          "editor.defaultFormatter": "ms-python.autopep8",
          "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "explicit"
          },
          "editor.formatOnSave": true
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnSave": true
        }
      },
      "extensions": [
        "esbenp.prettier-vscode",
        "ms-python.autopep8",
        "github.copilot",
        "eamodio.gitlens",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "containerEnv": {}
}
